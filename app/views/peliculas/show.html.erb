
 <style>
#logo {
  
   background-image: url("https://staticv2-4.rottentomatoes.com/static/images/logos/tomatocorner.png");
    background-color: green;
    background-repeat: no-repeat;
      width: 100%; height: 100px;
      
}
#brand-logo {
 background-image: url("https://staticv2-4.rottentomatoes.com/static/images/logos/rtlogo.png");
  background-repeat: no-repeat;
      width: 400px; height: 100px;

}
.login { color:white !important; width:450px; float:right;}
.nav > li > a, .navbar-text { color:white !important; font-weight: bold;  }
.nav > li > a:visited { background-color: green !important;    }

</style>
  

<%= render "shared/header" %>

<div class="controladorej2">


<div class="row">
  <div class="box">
      <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Mostrar Pelicula</div>
       <%= form_for(@pelicula) do |f| %>
         <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Id:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @pelicula.id %>">
              </div>
        </div> <!-- end field -->
        <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Titulo:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @pelicula.name %>">
              </div>
        </div> <!-- end field -->
          <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Valoración:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @pelicula.stars %>">
              </div>
        </div> <!-- end field -->
          <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Actor Principal:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @pelicula.main_actor %>">
              </div>
        </div> <!-- end field -->
        <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Año:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @pelicula.year %>">
              </div>
        </div> <!-- end field -->
       <% end %>
      <div class="row">
        <div class="col-lg-12">
          <br/>
       <%= link_to 'Back', peliculas_path, class:"btn btn-sm btn-success pull-right", style:"margin-right: 15px;" %>
     </div>
      </div> <!-- end field -->
  </div> <!-- end box -->
   
  <div class="margin20">  
    <%= @pelicula.errors.full_messages.each do |message| %>
        <div class="be-red white top-space text-center">
          * <%= message %>
        </div>
    <% end %>
  </div>
 
</div> <!-- end row -->

</div>  <!-- end controladorej2 -->

<%= render "shared/footer" %>